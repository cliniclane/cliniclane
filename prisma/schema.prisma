generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id            String   @id @map("_id")
  email         String   @unique
  password      String
  role          String   @default("admin")
  assignedBlogs String[] @default([])
  status        String   @default("active")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Articles {
  id                   String   @id @map("_id")
  title                String
  slug                 String   @unique
  tags                 String[]
  description          String
  author               String
  language             String?
  headerImage          String
  images               String[]
  publishDate          String
  mdxString            String
  canonical            String
  openGraphImage       String?
  openGraphTitle       String?
  openGraphDescription String?
}

model Languages {
  id        String   @id @map("_id")
  name      String
  code      String   @unique
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PagesContent {
  id         String   @id @map("_id")
  title      String
  slug       String   @unique
  mdxContent String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Images {
  id         String   @id @map("_id")
  url        String
  uploadedBy String
  createdAt  DateTime @default(now())
}
