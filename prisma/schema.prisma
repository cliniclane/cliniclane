generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id                String   @id @map("_id")
  email             String   @unique
  password          String
  role              String   @default("admin")
  assignedBlogs     String[] @default([])
  assignedLanguages String[] @default([])
  status            String   @default("active")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

type Translations {
  mdxString            String
  title                String
  tags                 String[]
  blogTitles           String[]
  language             String
  description          String
  openGraphTitle       String?
  openGraphDescription String?
}

model Articles {
  id                   String         @id @map("_id")
  title                String
  blogTitles           String[]
  slug                 String         @unique
  tags                 String[]
  description          String
  author               String
  language             String?
  languages            String[]       @default(["english"])
  headerImage          String
  images               String[]       @default(["", "", ""])
  publishDate          String
  mdxString            String
  canonical            String
  openGraphImage       String?
  openGraphTitle       String?
  openGraphDescription String?
  translations         Translations[]
}

model Languages {
  id        String   @id @map("_id")
  name      String
  code      String   @unique
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PagesContent {
  id         String   @id @map("_id")
  title      String
  slug       String   @unique
  mdxContent String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Images {
  id         String   @id @map("_id")
  url        String
  uploadedBy String
  createdAt  DateTime @default(now())
}
